<div id="meme-feed">
    <h1>Meme Feed</h1>
    <div id="memes">
        {{#each memes}}
        <div class="meme">
            <a href="#/details/{{_id}}" class="meme-title">{{title}}</a>
            <br>
            <a href="#/details/{{_id}}"><img class="meme-image" src="{{imageUrl}}"></a>
            <div class="info">

                <div id="data-buttons">
                    {{#if isCreator}}
                    <a href="#/details/{{_id}}" class="custom-button">Check Out</a>
                    <a href="#/edit/{{_id}}" class="custom-button">Edit</a>
                    <a href="#/delete/{{_id}}" class="custom-button">Delete</a>
                    <a href="#/userProfile/{{_id}}" class="creator">Creator: {{creator}}</a>
                    {{else}}
                    <a href="#/details/{{_id}}" class="custom-button">Check Out</a>
                    <a href="#/userProfile/{{_id}}" class="creator">Creator: {{creator}}</a>
                    {{/if}}
                </div>
            </div>
            <hr>
        </div>
        {{else}}

        <p class="no-memes">No memes in database.</p>
        {{/each}}

    </div>
</div>