{{>header}}
<div id="myMovies">
  <h1>My Movies</h1>
  <div class="movies">
    {{#each movies}}
    <div class="movie">
      <h2>Title: {{title}}</h2>
      <img src="{{imageUrl}}">
      <p>Available Tickets: {{tickets}}</p>
      <div class=" btn-group">
        <button><a href="#/editMovie/{{_id}}">Edit</a></button>
        <button><a href="#/deleteMovie/{{_id}}">Delete</a></button>
        <button><a href="#/buyTicket/{{_id}}">Buy Ticket</a></button>
        <button><a href="#/detailsMovie/{{_id}}">Details</a></button>
      </div>
    </div>
    {{else}}
    <h2>NO MOVIES TO SHOW</h2>
    {{/each}}
  </div>
  {{>footer}}